<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivione93.hojames">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HojaMes">
        <activity android:name=".SplashScreenActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InformationActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ui.login.AuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.ForgotPasswordActivity"
            android:label="@string/title_forgot_password"
            android:parentActivityName=".ui.login.AuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.NewAthleteActivity"
            android:label="@string/title_new_athlete"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:label="@string/title_edit_profile"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.trainings.ViewTrainingActivity"
            android:label="@string/title_activity_new_training"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.competitions.NewCompetitionActivity"
            android:label="@string/title_activity_new_competition"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>